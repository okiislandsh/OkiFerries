<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver">

    <LinearLayout
        android:id="@+id/buttonContainer1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@color/colorSilver"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ttScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHonshuOki"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_honshu"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_bon"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWinter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_winter"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1.5"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_date_today"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="0"
            android:background="#fff"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_rainbow_calendar"
            app:tint="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/btnEx"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="0"
            android:background="#fff"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_ex_filter"
            app:tint="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRainbow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_rainbow"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDozen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_dozen"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIsokaze"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#FFF"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/button_isokaze"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/ttScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer1">

        <LinearLayout
            android:id="@+id/ttContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>