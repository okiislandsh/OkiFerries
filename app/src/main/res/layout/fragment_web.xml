<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver">

    <LinearLayout
        android:id="@+id/buttonContainer1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnOkikankou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:paddingStart="4dp"
            android:paddingTop="16dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnNaikosen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="@color/colorWhite"
            android:paddingStart="4dp"
            android:paddingTop="16dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnOkikisen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/colorWhite"
            android:paddingStart="4dp"
            android:paddingTop="16dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnKankokyokai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="@color/colorWhite"
            android:paddingStart="4dp"
            android:paddingTop="16dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/webView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer1">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnTranslation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/robot" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:tint="@color/button_tint"
            android:tintMode="multiply" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnForward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:padding="4dp"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            android:tint="@color/button_tint"
            android:tintMode="multiply" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnWeather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/weather" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChibu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:includeFontPadding="false"
            android:padding="1dp"
            android:text="@string/button_chibu"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:includeFontPadding="false"
            android:padding="1dp"
            android:text="@string/button_ama"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNishinoshima"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:includeFontPadding="false"
            android:padding="1dp"
            android:text="@string/button_nishinoshima"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:includeFontPadding="false"
            android:padding="1dp"
            android:text="@string/button_dogo"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeMinTextSize="9sp" />
    </LinearLayout>

    <jp.okiislandsh.library.android.view.LollipopFixedWebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer2">

    </jp.okiislandsh.library.android.view.LollipopFixedWebView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/webView"
        app:layout_constraintEnd_toEndOf="@id/webView"
        app:layout_constraintStart_toStartOf="@id/webView"
        app:layout_constraintTop_toTopOf="@id/webView" />

</androidx.constraintlayout.widget.ConstraintLayout>