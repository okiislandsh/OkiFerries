<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="227dp"
    android:layout_height="432dp"
    android:layout_gravity="center_horizontal"
    tools:context="jp.okiislandsh.oki.schedule.ui.guide.MapScale1View">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/map_scale1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/eventAreaOkiIslands"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/eventAreaHondo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/containerLabels"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:text="@string/map_title_scale1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

    </FrameLayout>

</FrameLayout>
